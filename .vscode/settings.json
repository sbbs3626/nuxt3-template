{
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "jsx",
        "html",
        "vue"
    ],
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.validate": [
        "css",
        "less",
        "scss",
        "html",
        "vue"
    ],
    "vetur.validation.template": false,
    "vetur.validation.script": false,
    "vetur.validation.style": false,
}